<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.svijayr007.oncampuspartner">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/oncampus_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:node="merge"
        tools:replace="android:icon">
        <activity android:name=".ui.settlement_detail.SettlementDetailActivity"></activity>
        <activity android:name=".ui.account.AccountActivity" />
        <activity android:name=".ui.order_detail.OrderDetailActivity" />
        <activity android:name=".ui.no_internet.NoInternetActivity" />
        <activity android:name=".ui.signup.SignupActivity" />
        <activity android:name=".ui.login.OtpActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.orders.OrdersActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.foods.FoodActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/oncampus_logo" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <service android:name=".services.MyFCMServices">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>