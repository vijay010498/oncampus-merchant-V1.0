<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="130dp">
            <ImageView
                android:id="@+id/img_food_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_food"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/image_veg_non_veg"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                android:background="@android:color/white"
                android:src="@drawable/ic_veg" />

        </RelativeLayout>


        <TextView
            android:id="@+id/txt_food_name"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="ROASTED QUATER CHICKEN"/>

        <TextView
            android:id="@+id/food_desc"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="7sp"
            android:text="Food Description"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹120"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/black"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.suke.widget.SwitchButton
                    android:id="@+id/food_available_switch"
                    android:layout_width="40.00dp"
                    android:layout_height="20.00dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    app:sb_background="@color/instagramColor"
                    android:layout_gravity="center_horizontal|center_vertical"
                    app:sb_checked_color="@color/colorPrimaryDark"
                    app:sb_show_indicator="false"/>
                <ImageView
                    android:id="@+id/available_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/ic_baseline_not_available_24"
                    android:scaleType="fitXY" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
