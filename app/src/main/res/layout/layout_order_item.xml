<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_order_name"
                android:text="Vijay"
                android:fontFamily="@font/open_sans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/txt_order_number"
                android:text="#1595416825236147266"
                android:fontFamily="@font/open_sans_bold"
                android:layout_width="match_parent"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_delivery_location"
            android:text="Hostel 6."
            android:fontFamily="@font/open_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="Payment Amount: "
                android:fontFamily="@font/open_sans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/txt_order_amount_restaurant_settlement"
                android:text="â‚¹100"
                android:fontFamily="@font/open_sans_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/googleRedColor"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/txt_order_type"
                android:text=" Pickup "
                android:fontFamily="@font/open_sans_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="end"
                android:textColor="@color/behanceColor"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="15sp" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/dotted_green"
            />
        <TextView
            android:id="@+id/txt_orderCurrent_status"
            android:text=" Delivered "
            android:fontFamily="@font/open_sans_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="end"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_order_items"
            android:text="Grilled Chicken, Egg Fried Rice "
            android:fontFamily="@font/poppins_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_order_date"
            android:text="Today at: 13:05:56 pm "
            android:fontFamily="@font/poppins_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/txt_order_instructions"
            android:text="Less salt"
            android:fontFamily="@font/open_sans_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/status_update_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/behanceColor"
                android:text="Change status:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_status_out_for_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Out for delivery  "
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/bg_rounded_green_stroke"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/poppins"/>
                <TextView
                    android:id="@+id/txt_status_ready_for_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Ready for pickup  "
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/bg_rounded_green_stroke"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/poppins"/>
                <TextView
                    android:id="@+id/txt_status_deliver_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Deliver Now  "
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/bg_rounded_green_stroke"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/poppins"/>

                <TextView
                    android:id="@+id/txt_status_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Accept  "
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/bg_rounded_green_stroke"
                    android:padding="5dp"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/poppins"/>
                <TextView
                    android:id="@+id/txt_status_decline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Decline  "
                    android:textColor="@color/googleRedColor"
                    android:background="@drawable/bg_rounded_red_stroke"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/poppins"/>
                <TextView
                    android:id="@+id/txt_call_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Call   "
                    android:textColor="@color/black"
                    android:background="@drawable/bg_rounded_green_stroke"
                    android:padding="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_gravity="center_vertical|center_horizontal|end"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>


        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/black"
            />

    </LinearLayout>






</androidx.cardview.widget.CardView>