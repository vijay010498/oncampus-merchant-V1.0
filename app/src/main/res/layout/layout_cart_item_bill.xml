<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:gravity="center_vertical|center_horizontal"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_veg_non_veg"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@android:color/white"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_veg" />

        <ImageView
            android:layout_toRightOf="@id/image_veg_non_veg"
            android:id="@+id/cart_food_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_restaurant"
            android:scaleType="centerCrop"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="start|center_horizontal|center_vertical"/>
        <TextView
            android:layout_toRightOf="@id/cart_food_image"
            android:id="@+id/cart_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Garlic breadSticks"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            android:maxWidth="180dip"
            android:maxLines="5"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/darkColor1"/>



        <TextView
            android:id="@+id/cart_food_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="120"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="12sp"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical|center_horizontal|end"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/black"/>



    </RelativeLayout>



</LinearLayout>